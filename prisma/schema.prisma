generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  id                 Int         @id @default(autoincrement())
  link               String      @unique
  characters         Character[]
  charactersPosition Position[]
  scores             Score[]
}

model Character {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  insidePhoto Photo      @relation(fields: [photoId], references: [id])
  photoId     Int
  positions   Position[]
}

model Position {
  id          Int       @id @default(autoincrement())
  horizontal  Int
  vertical    Int
  character   Character @relation(fields: [characterId], references: [id])
  characterId Int
  photo       Photo     @relation(fields: [photoId], references: [id])
  photoId     Int

  @@unique([characterId, photoId])
}

model User {
  id     Int     @id @default(autoincrement())
  name   String  @default("anon")
  scores Score[]
}

model Score {
  id        Int      @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  photo     Photo    @relation(fields: [photoId], references: [id])
  photoId   Int

  @@unique([userId, photoId])
}
